<!-- views/albumRatings/index.ejs -->

<main class="">
  <div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="pt-5 pb-5">
      <h1>AlbumRatings</h1>
      <p>Here are all our current albumRatings.</p>

      <table class="table text-center">
        <thead>
          <tr>
            <th class="text-start">AlbumRating</th>
            <th>Views</th>
            <th>Replies</th>
            <th>Latest Comment</th>
          </tr>
        </thead>
        <tbody>
          <% albumRatings.forEach(albumRating => { %>
          <tr class="mb-3">
            <td class="text-start">
              <h3 class="pt-3">
                <a href="<%= `/albumRatings/${albumRating._id}` %>"
                  ><%= albumRating.title %></a
                >
              </h3>
              <p><%= albumRating.description.substring(0, 150) %>&hellip;</p>
              <% //if (loggedIn && currentUser == albumRating.author) { %>
              <footer>
                <p>
                  <small>
                    <% if (loggedIn) { %>
                    <a href="<%=`albumRatings/${albumRating._id}/edit`%>">
                      ‚úèÔ∏è Edit
                    </a>
                    <a
                      href="<%= `albumRatings/${albumRating._id}/delete?_method=DELETE` %>"
                      onclick="return confirm('Are you sure you want to delete this record?')"
                      a
                      >üóëÔ∏è Delete</a
                    >
                    <% } %> Posted by
                    <a href="<%= `/users/${albumRating.author._id}` %>">
                      <%= albumRating.author.fullName %>
                    </a>
                    on
                    <time datetime="<%= albumRating.createdAt.toISOString() %>">
                      <%= albumRating.createdAt.toLocaleDateString() %>
                    </time>
                  </small>
                </p>
              </footer>
              <% //} %>
            </td>
            <td><%= albumRating.views %></td>
            <td><%= albumRating.comments.length %></td>
            <td>
              <% if (albumRating.comments.length > 0) { %> <% } else { %> No
              comments yet. <% } %>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>

      <% if (loggedIn) { %>
      <div class="mt-5 text-center">
        <a href="/albumRatings/new" class="btn btn-primary"
          >Add New AlbumRating</a
        >
        <a
          href="/"
          class="btn ut-red disabled"
          role="button"
          aria-disabled="true"
          >Delete All AlbumRatings</a
        >
      </div>
      <% } else { %>
      <div class="mt-5 text-center">
        <p>Login to Add New AlbumRating</p>
        <%- include('../_partials/_loginButtons.ejs') %>
      </div>
      <% } %>
    </div>
  </div>
</main>
